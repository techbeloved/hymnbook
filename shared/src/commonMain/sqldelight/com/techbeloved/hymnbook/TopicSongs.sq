CREATE TABLE TopicSongs (
    topic TEXT COLLATE NOCASE,
    song_id INTEGER,
    PRIMARY KEY (topic, song_id),
    FOREIGN KEY (topic) REFERENCES TopicEntity(name) ON DELETE CASCADE,
    FOREIGN KEY (song_id) REFERENCES SongEntity(id) ON DELETE CASCADE
);

